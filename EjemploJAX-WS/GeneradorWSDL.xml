<?xml version="1.0"?> 
	
	<!-- base directory -->
    <project default="main" basedir="./"> 
    
    <!-- WSGEN -->
    <!-- Root of classpath in which the web service class can be found. --> 
    <property name="class-dir" value="${basedir}/WebRoot/WEB-INF/classes/"/>
    <!-- Default output directory for wsgen. --> 
    <property name="wsgen-outdir" value="${basedir}/wsdlGenerados/"/>  
    <!-- Default output directory for artifacts generated by wsgen. --> 
    <property name="artifacts-outdir" value="${wsgen-outdir}/artifacts/"/> 
    <!-- Directory to which WSDL document will be written by wsgen. --> 
    <property name="wsdl-outdir" value="${wsgen-outdir}/wsdl"/> 
    <!-- Directory to which generated sourcefiles will be written by wsgen. --> 
    <property name="src-outdir" value="${wsgen-outdir}/src/"/> 
    <!-- Directory to which generated classfiles will be written by wsgen. --> 
    <property name="gen-classdir" value="${wsgen-outdir}/class/"/> 
    <!-- Absolute path of the wsgen command. --> 
    <property name="wsgen-cmd" 
        value="C:/privado/javaDev/librerias/jaxws-ri/bin/wsgen"/> 
	<!-- class that contains WS implementation -->
    <property name="endPoing-Class" 
        value="com.unisys.voice.palestra.ws.servidor.EjemploWS"/> 
	<!-- path to wsgen -->
	<property name="wsgen-path" value="C:/privado/javaDev/librerias/jaxws-ri/bin/"/>
	<!-- wsgen executable -->
	<property name="wsgen-runable" value="${wsgen-path}/wsgen.bat"/>
	
	<!-- WSIMPORT -->
	<!-- path to wsimport -->
	<property name="wsimport-path" value="C:/privado/javaDev/librerias/jaxws-ri/bin/"/>
	<!-- wsgen executable -->
	<property name="wsimport-runable" value="${wsimport-path}/wsimport.bat"/>
	<!-- client dir -->
	<property name="client-dir" value="../EjemploJAX-WS_CLIENTE/"/>
	<!-- Root of src. --> 
    <property name="client-src-dir" value="${client-dir}/src/"/>
    <!-- path to WSDL -->
    <property name="relative-path-wsdl" value="${client-dir}/wsdl/"/>
    <!-- path WSDL -->
    <!-- property name="path-wsdl" value="${relative-path-wsdl}/EjemploWSService.wsdl"/ -->
    <property name="path-wsdl" value="http://localhost:8080/EjemploWS?wsdl"/>

    <target name="GenerarWSDL"> 
    	<echo message="calling the web services generation task wsgen" /> 
        <exec executable="${wsgen-runable}"> 
            <arg value="-verbose"/> 
            <!-- Set the classpath. --> 
            <arg value="-classpath"/> 
            <arg value="${class-dir}"/> 
            <!-- Generate a WSDL file. --> 
            <arg value="-wsdl"/> 
            <!-- Specify where to write other generated files. --> 
            <arg value="-d"/> 
            <arg value="${artifacts-outdir}"/> 
            <!-- Specify where to write WSDL and XML schema files. --> 
            <arg value="-r"/> 
            <arg value="${wsdl-outdir}"/> 
            <!-- Specify where to write generated source files. --> 
            <arg value="-s"/> 
            <arg value="${src-outdir}"/> 
            <!-- Keep generated source files. --> 
            <arg value="-keep"/> 
            <!-- Specify service endpoint interface/class. --> 
            <arg value="${endPoing-Class}" /> 
        </exec> 
    </target> 
    
    <target name="GenerarClasesJAVA">
    	<echo message="calling the java class generation task wsimport" /> 
    	<exec executable="${wsimport-runable}"> 
            <arg value="-verbose"/> 
            <!-- Set the classpath. --> 
            <arg value="-d"/> 
            <arg value="${client-src-dir}"/> 
            <!-- Keep generated source files. --> 
            <arg value="-keep"/> 
            <!-- path to wsdl -->
            <arg value="${path-wsdl}" /> 
        </exec> 
    </target>
    
    <target name="main" depends="GenerarWSDL, GenerarClasesJAVA">
    	<echo message="wsdl and classes generation task"/>
    </target>

</project>